include variables

header(class="bg-white dark:bg-gray-900 border-b border-gray-200 dark:border-gray-800 sticky top-0 z-50")
  nav(aria-label="Main navigation" class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8")
    div(class="flex flex-wrap items-center justify-between gap-4 py-3 md:py-4")
      a(href="index.html" tabindex="0" class="flex-shrink-0 focus:outline-none focus-visible:ring-2 focus-visible:ring-primary focus-visible:ring-offset-2 rounded")
        img(src="./images/logo-placeholder.svg" alt="Trufla - Home" width="200" height="80" class="h-14 md:h-16 dark:invert")
      ul(class="flex flex-wrap items-center gap-x-4 gap-y-2 md:gap-6 list-none m-0 p-0")
        each link in navLinks
          li(class="hidden md:block")
            a(tabindex="0" href=link.href class="text-secondary hover:text-primary dark:text-gray-200 dark:hover:text-primary font-semibold text-base focus:outline-none focus-visible:ring-2 focus-visible:ring-primary focus-visible:ring-offset-2 rounded px-1 py-2")= link.label
        each val in otherLinks
          li
            a(tabindex="0" href='tel:' + val.number aria-label="Phone: " + val.number class="flex items-center gap-2 text-secondary hover:text-primary dark:text-gray-200 dark:hover:text-primary font-semibold text-base focus:outline-none focus-visible:ring-2 focus-visible:ring-primary focus-visible:ring-offset-2 rounded px-1 py-2")
              img(src="./images/phone-icon.svg" alt="" width="16" height="16" aria-hidden="true" class="flex-shrink-0")
              span(class="hidden sm:inline")= val.number
        li
          a(tabindex="0" role="button" href="contact.html" class="inline-flex items-center justify-center bg-primary text-white hover:bg-secondary border border-primary hover:border-secondary rounded font-semibold text-base px-4 py-2.5 md:px-6 md:py-3 h-10 md:h-12 min-w-[100px] md:min-w-[140px] focus:outline-none focus-visible:ring-2 focus-visible:ring-primary focus-visible:ring-offset-2 transition-colors") Get #[span(class="hidden sm:inline") a Quote]
