include variables

footer(class="px-6 md:px-16 lg:px-24 xl:px-32 w-full text-sm text-slate-500 bg-white dark:bg-gray-950 dark:text-gray-400 pt-10")
  div(class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-5 gap-14 max-w-7xl mx-auto pb-10")
    //- Brand column
    div(class="sm:col-span-2 lg:col-span-2")
      a(href=homeUrl)
        img(class="h-10 w-auto max-w-[157px] dark:invert" src=logo.src alt=logo.alt width="157" height="40")
      p(class="text-sm/7 mt-6")= footerAboutText
      div(class="flex gap-4 mt-4")
        each social in footerSocialLinks
          a(href=social.href class="text-slate-500 hover:text-slate-700 dark:text-gray-400 dark:hover:text-gray-200 transition text-lg" aria-label=social.ariaLabel)
            span(class=social.icon aria-hidden="true")

    //- Menu column (navbar links) + Company links
    div(class="col-span-1 flex flex-col lg:items-center lg:justify-center gap-10 lg:gap-14")
      div(class="flex flex-col text-sm space-y-2.5")
        h2(class="text-xl font-semibold mb-5 text-gray-800 dark:text-gray-200")= footerMenuHeading
        each link in navLinks
          a(class="hover:text-slate-600 dark:hover:text-gray-300 transition" href=link.href)= link.label
      
    //- Newsletter column
    div(class="col-span-2")
      h2(class="text-xl font-semibold text-gray-800 dark:text-gray-200 mb-5")= newsletterHeading
      div(class="text-sm space-y-6 max-w-sm")
        p= newsletterDescription
        div(class="flex items-center justify-center gap-2 p-2 rounded-md bg-primary/10 dark:bg-gray-800")
          input(class="focus:ring-2 bg-white dark:bg-gray-900 dark:border-gray-700 ring-primary outline-none w-full max-w-64 py-2 rounded px-2 border border-gray-200 dark:border-gray-700" type="email" placeholder=newsletterPlaceholder aria-label=newsletterPlaceholder)
          button(class="bg-primary dark:bg-primary hover:bg-primary/80 dark:hover:bg-secondary px-4 py-2 text-white rounded transition-colors" type="button")= newsletterButton

  p(class="py-4 text-center border-t mt-6 border-slate-200 dark:border-gray-800")
    | Copyright 2025 Â© 
    a(href=homeUrl class="hover:text-slate-700 dark:hover:text-gray-300")= siteName
    | #{' ' + copyrightSuffix}

button.scroll-top(class="fixed bottom-4 left-4 w-12 h-12 rounded bg-primary dark:bg-primary text-white text-xl flex items-center justify-center cursor-pointer transition-colors hover:bg-primary dark:hover:bg-secondary border-none hidden focus-visible:outline-2 focus-visible:outline-primary focus-visible:outline-offset-2 motion-reduce:transition-none" type="button" aria-label=scrollTopAriaLabel title=scrollTopTitle)
  span(class="fa fa-angle-up" aria-hidden="true")
