extends ../layouts/layout

block vars
  - var isArabic = false
  - var langSwitchBase = ''

block head
  title= isArabic ? 'الصفحة غير موجودة | ترافلا' : 'Page Not Found | Trufla'

block pageHeaderData(pageData)
  - pageData.title = isArabic ? 'الصفحة غير موجودة' : 'Page Not Found'
  - pageData.breadcrumbs = isArabic ? [{ label: 'الرئيسية', url: homeUrl }, { label: '404', url: null }] : [{ label: 'Home', url: homeUrl }, { label: '404', url: null }]

block content
  - if (typeof isArabic === 'undefined') isArabic = false
  section(class="flex flex-col items-center justify-center min-h-[400px] py-8 px-4 text-center")
    p(class="text-lg font-medium text-primary mb-2")= isArabic ? 'خطأ 404' : '404 Error'
    p(class="text-base text-black/50 mt-4 mb-0")= isArabic ? 'عذراً، لم نتمكن من العثور على الصفحة التي تبحث عنها.' : "Sorry, we couldn't find the page you're looking for."
    div(class="flex flex-wrap items-center justify-center gap-4 mt-6")
      a(href=isArabic ? 'index-ar.html' : 'index.html' class="inline-flex items-center gap-2 py-2.5 px-7 text-sm font-medium text-white bg-primary rounded-md no-underline cursor-pointer transition-colors hover:bg-secondary focus-visible:outline-2 focus-visible:outline-secondary focus-visible:outline-offset-2")= isArabic ? 'العودة للرئيسية' : 'Go back home'
      a(href=isArabic ? 'contact-ar.html' : 'contact.html' class="inline-flex items-center gap-2 py-2.5 px-7 text-sm font-medium text-secondary bg-transparent border border-black/15 rounded-md no-underline cursor-pointer transition-colors hover:text-secondary focus-visible:outline-2 focus-visible:outline-secondary focus-visible:outline-offset-2")
        = isArabic ? 'اتصل بالدعم' : 'Contact support'
        svg(class="w-3 h-3" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true")
          path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7")
