extends ../layouts/layout

block head
  title Page Not Found | Trufla

block pageHeaderData(pageData)
  - pageData.title = 'Page Not Found'
  - pageData.breadcrumbs = [{ label: 'Home', url: 'index.html' }, { label: '404', url: null }]

block content
  section(class="flex flex-col items-center justify-center min-h-[400px] py-8 px-4 text-center")
    p(class="text-lg font-medium text-primary mb-2") 404 Error
    p(class="text-base text-black/50 mt-4 mb-0") Sorry, we couldn't find the page you're looking for.
    div(class="flex flex-wrap items-center justify-center gap-4 mt-6")
      a(href="index.html" class="inline-flex items-center gap-2 py-2.5 px-7 text-sm font-medium text-white bg-primary rounded-md no-underline cursor-pointer transition-colors hover:bg-secondary focus-visible:outline-2 focus-visible:outline-secondary focus-visible:outline-offset-2") Go back home
      a(href="contact.html" class="inline-flex items-center gap-2 py-2.5 px-7 text-sm font-medium text-secondary bg-transparent border border-black/15 rounded-md no-underline cursor-pointer transition-colors hover:text-secondary focus-visible:outline-2 focus-visible:outline-secondary focus-visible:outline-offset-2")
        | Contact support
        svg(class="w-3 h-3" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true")
          path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7")
