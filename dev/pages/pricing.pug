extends ../layouts/layout

block vars
  - var isArabic = false
  - var langSwitchBase = 'pricing'

block head
  title Pricing | Trufla

block pageHeaderData(pageData)
  - pageData.title = isArabic ? 'الأسعار' : 'Pricing'
