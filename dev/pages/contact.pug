extends ../layouts/layout

block head
  title Contact | Trufla

block pageHeaderData(pageData)
  - pageData.title = "We'd love to hear from you"
  - pageData.breadcrumbs = [{ label: 'Home', url: 'index.html' }, { label: 'Contact', url: null }]

block content
  div(class="max-w-7xl flex flex-col gap-10 w-full mx-auto p-6 sm:p-10 text-gray-800 dark:text-gray-200")
    //- Contact info cards
    div(class="grid md:grid-cols-3 gap-8")
      div
        svg(class="text-primary bg-primary/20 p-2.5 aspect-square rounded-full size-10" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true")
          path(d="M21 4.125H3A1.125 1.125 0 0 0 1.875 5.25V18a1.875 1.875 0 0 0 1.875 1.875h16.5A1.875 1.875 0 0 0 22.125 18V5.25A1.125 1.125 0 0 0 21 4.125m-2.892 2.25L12 11.974 5.892 6.375zM4.125 17.625V7.808l7.115 6.522a1.125 1.125 0 0 0 1.52 0l7.115-6.522v9.817z" fill="currentColor")
        p(class="text-lg font-bold mt-2") Email Support
        p(class="text-gray-500 dark:text-gray-400 mt-1 mb-4") Our team can respond in real time.
        a(href="mailto:contact@trufla.example.com" class="text-primary font-semibold hover:text-secondary") contact@trufla.example.com
      div
        svg(class="text-primary bg-primary/20 p-2.5 aspect-square rounded-full size-10" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true")
          path(d="M22.875 19.125H21.75V9.309a1.125 1.125 0 0 0-.375-2.184h-3.75V4.809a1.125 1.125 0 0 0-.375-2.184H3.75a1.125 1.125 0 0 0-.375 2.184v14.316H2.25a1.125 1.125 0 1 0 0 2.25h20.625a1.125 1.125 0 1 0 0-2.25M19.5 9.375v9.75h-1.875v-9.75zm-13.875-4.5h9.75v14.25h-1.5V15a1.125 1.125 0 0 0-1.125-1.125h-4.5A1.125 1.125 0 0 0 7.125 15v4.125h-1.5zm6 14.25h-2.25v-3h2.25zM6.75 7.5a1.125 1.125 0 0 1 1.125-1.125h.75a1.125 1.125 0 0 1 0 2.25h-.75A1.125 1.125 0 0 1 6.75 7.5m4.5 0a1.125 1.125 0 0 1 1.125-1.125h.75a1.125 1.125 0 0 1 0 2.25h-.75A1.125 1.125 0 0 1 11.25 7.5m-4.5 3.75a1.125 1.125 0 0 1 1.125-1.125h.75a1.125 1.125 0 1 1 0 2.25h-.75A1.125 1.125 0 0 1 6.75 11.25m4.5 0a1.125 1.125 0 0 1 1.125-1.125h.75a1.125 1.125 0 1 1 0 2.25h-.75a1.125 1.125 0 0 1-1.125-1.125" fill="currentColor")
        p(class="text-lg font-bold mt-2") Visit Our Office
        p(class="text-gray-500 dark:text-gray-400 mt-1 mb-4") Visit our location in real life.
        span(class="text-primary font-semibold") 221b Elementary Avenue, NY
      div
        svg(class="text-primary bg-primary/20 p-2.5 aspect-square rounded-full size-10" width="21" height="21" viewBox="0 0 21 21" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true")
          path(d="m19 13.513-4.415-1.98-.017-.007a1.87 1.87 0 0 0-1.886.243l-2.091 1.781c-1.22-.66-2.478-1.91-3.14-3.113l1.787-2.125q.043-.051.08-.108a1.88 1.88 0 0 0 .148-1.782L7.488 2A1.88 1.88 0 0 0 5.539.89 5.65 5.65 0 0 0 .625 6.5c0 7.651 6.224 13.875 13.875 13.875a5.65 5.65 0 0 0 5.61-4.914A1.88 1.88 0 0 0 19 13.513m-4.5 4.612A11.64 11.64 0 0 1 2.875 6.5a3.4 3.4 0 0 1 2.67-3.332l1.764 3.938-1.796 2.14q-.044.051-.08.108a1.88 1.88 0 0 0-.12 1.841c.883 1.808 2.702 3.615 4.529 4.5a1.88 1.88 0 0 0 1.845-.136q.055-.036.105-.08l2.102-1.787 3.938 1.763a3.4 3.4 0 0 1-3.332 2.67" fill="currentColor")
        p(class="text-lg font-bold mt-2") Call Us Directly
        p(class="text-gray-500 dark:text-gray-400 mt-1 mb-4") Available during working hours.
        a(href="tel:+1234567789" class="text-primary font-semibold hover:text-secondary") (+1) 234 - 4567 - 789

    //- Contact form
    section(aria-label="Contact form")
      h2(class="text-secondary font-bold text-section mb-section-title") Send us a message
      p(class="text-gray-500 dark:text-gray-400 mb-4") We're here to help you with any questions or concerns you may have. Please fill out the form below and we'll get back to you as soon as possible.
      form(class="flex flex-col gap-6" action="#" method="post")
        div(class="grid grid-cols-1 md:grid-cols-2 gap-6")
          div(class="flex flex-col gap-2")
            label(for="contact-name" class="font-medium text-secondary") Name
            input#contact-name(
              type="text"
              name="name"
              required
              placeholder="Your name"
              class="rounded-md border border-gray-200 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-800 dark:text-gray-200 px-3 py-2.5 focus:ring-2 focus:ring-primary focus:border-primary outline-none transition"
            )
          div(class="flex flex-col gap-2")
            label(for="contact-email" class="font-medium text-secondary") Email
            input#contact-email(
              type="email"
              name="email"
              required
              placeholder="your@email.com"
              class="rounded-md border border-gray-200 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-800 dark:text-gray-200 px-3 py-2.5 focus:ring-2 focus:ring-primary focus:border-primary outline-none transition"
            )
          div(class="flex flex-col gap-2")
            label(for="contact-phone" class="font-medium text-secondary") Phone
            input#contact-phone(
              type="tel"
              name="phone"
              placeholder="+1 (555) 000-0000"
              class="rounded-md border border-gray-200 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-800 dark:text-gray-200 px-3 py-2.5 focus:ring-2 focus:ring-primary focus:border-primary outline-none transition"
            )
          div(class="flex flex-col gap-2")
            label(for="contact-subject" class="font-medium text-secondary") Subject
            input#contact-subject(
              type="text"
              name="subject"
              placeholder="How can we help?"
              class="rounded-md border border-gray-200 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-800 dark:text-gray-200 px-3 py-2.5 focus:ring-2 focus:ring-primary focus:border-primary outline-none transition"
            )
        div(class="flex flex-col gap-2 w-full")
          label(for="contact-message" class="font-medium text-secondary") Message
          textarea#contact-message(
            name="message"
            required
            rows="5"
            placeholder="Your message..."
            class="w-full rounded-md border border-gray-200 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-800 dark:text-gray-200 px-3 py-2.5 focus:ring-2 focus:ring-primary focus:border-primary outline-none transition resize-y min-h-[120px]"
          )
        div(class="w-full")
          button(
            type="submit"
            class="w-full md:w-auto min-w-[160px] px-6 py-3 rounded-md bg-primary text-white font-semibold hover:bg-secondary transition focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2"
          ) Send message

    //- Google Map
    section(aria-label="Office location map")
       div(class="w-full overflow-hidden rounded-xl border border-gray-200 dark:border-gray-700 aspect-[16/10] min-h-[240px] bg-gray-100 dark:bg-gray-800")
        iframe(
          title="Office location - 221b Elementary Avenue, NY"
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d193595.15830869428!2d-74.11976373946234!3d40.69766374865766!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c24fa5d33f083b%3A0xc80b8f06e177fe62!2sNew%20York%2C%20NY%2C%20USA!5e0!3m2!1sen!2s!4v1708000000000!5m2!1sen!2s"
          width="100%"
          height="100%"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          class="block w-full h-full min-h-[240px]"
        )
