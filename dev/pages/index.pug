extends ../layouts/layout

block head
  title Trufla Task | Home

block content
  //- 1. Hero
  section(class="font-['Poppins',sans-serif] relative bg-hero bg-cover bg-center bg-no-repeat text-white py-12 md:py-16 lg:py-20 min-h-[32rem] md:min-h-[36rem] lg:min-h-[42rem] flex items-center text-center dark:bg-gray-950")
    .hero-content(class="max-w-3xl mx-auto w-full px-4 sm:px-6 lg:px-8")
      .hero-badge(class="inline-flex items-center gap-2 py-2 px-4 mb-6 rounded-full bg-white/15 border border-white/25 dark:border-white/20 text-sm font-medium text-white/95")
        span(class="inline-block w-2 h-2 rounded-full bg-primary" aria-hidden="true")
        span Trusted templates for your business
      h1(class="text-4xl md:text-6xl font-medium leading-tight tracking-tight text-white mb-2") Welcome to truWeb Templates
      p(class="text-sm md:text-base leading-relaxed text-white/90 max-w-xl mx-auto mb-6") Get insurance templates and claims support that scale with your business. We help teams save time and reduce errors with clear processes and ready-to-use documents.
      a.hero-cta(href="contact.html" class="inline-flex items-center justify-center gap-2 min-w-[150px] py-3 px-6 text-sm font-medium text-white bg-primary rounded-lg no-underline cursor-pointer transition-colors hover:bg-secondary focus-visible:outline-2 focus-visible:outline-white focus-visible:outline-offset-2") Get a Quote
      .hero-features(class="flex flex-wrap justify-center gap-6 md:gap-8 mt-7 px-2")
        .hero-feature(class="flex items-center gap-2 text-sm text-white/85")
          span(class="inline-block w-1.5 h-1.5 rounded-full bg-primary shrink-0" aria-hidden="true")
          span Payments
        .hero-feature(class="flex items-center gap-2 text-sm text-white/85")
          span(class="inline-block w-1.5 h-1.5 rounded-full bg-primary shrink-0" aria-hidden="true")
          span Claims Assistance
        .hero-feature(class="flex items-center gap-2 text-sm text-white/85")
          span(class="inline-block w-1.5 h-1.5 rounded-full bg-primary shrink-0" aria-hidden="true")
          span Get a Quote

  //- 2. About our apps
  section(class="bg-page dark:bg-gray-900 py-16 md:py-20")
    div(class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center")
      div(class="max-w-4xl mx-auto flex flex-col md:flex-row items-center justify-center gap-8 px-4 md:px-0")
        img(class="max-w-sm w-full rounded-xl h-auto object-cover" src="https://images.unsplash.com/photo-1555212697-194d092e3b8f?q=80&w=830&h=844&auto=format&fit=crop" alt="truWeb templates and workflows")
        div(class="text-left")
          h3(class="text-secondary dark:text-gray-100 font-bold text-section mb-section-title") Our Latest features
          p(class="text-secondary/80 dark:text-gray-300 text-lg leading-[34px] font-['Open_Sans',sans-serif]") Ship clear, compliant templates without the overhead — customizable, scalable and team-friendly documents for payments and claims.
          div(class="flex flex-col gap-10 mt-6")
            div(class="flex items-center gap-4")
              div(class="size-9 p-2 bg-primary/10 border border-primary/30 dark:border-primary/40 rounded flex items-center justify-center shrink-0")
                img(class="w-full h-full object-contain" src="https://raw.githubusercontent.com/prebuiltui/prebuiltui/main/assets/aboutSection/flashEmoji.png" alt="")
              div
                h4(class="text-base font-medium text-secondary dark:text-gray-100") Lightning-Fast Performance
                p(class="text-sm text-secondary/70 dark:text-gray-400") Built with speed — minimal load times and optimized delivery.
            div(class="flex items-center gap-4")
              div(class="size-9 p-2 bg-primary/10 border border-primary/30 dark:border-primary/40 rounded flex items-center justify-center shrink-0")
                img(class="w-full h-full object-contain" src="https://raw.githubusercontent.com/prebuiltui/prebuiltui/main/assets/aboutSection/colorsEmoji.png" alt="")
              div
                h4(class="text-base font-medium text-secondary dark:text-gray-100") Beautifully Designed Components
                p(class="text-sm text-secondary/70 dark:text-gray-400") Modern, clear templates ready for any insurance or claims workflow.
            div(class="flex items-center gap-4")
              div(class="size-9 p-2 bg-primary/10 border border-primary/30 dark:border-primary/40 rounded flex items-center justify-center shrink-0")
                img(class="w-full h-full object-contain" src="https://raw.githubusercontent.com/prebuiltui/prebuiltui/main/assets/aboutSection/puzzelEmoji.png" alt="")
              div
                h4(class="text-base font-medium text-secondary dark:text-gray-100") Plug-and-Play Integration
                p(class="text-sm text-secondary/70 dark:text-gray-400") Simple setup — use as-is or customize to match your brand and process.

   

  //- 4. Team
  section#team(class="bg-page dark:bg-gray-900 py-16 md:py-20")
    div(class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center")
      h2(class="text-secondary dark:text-gray-100 font-bold text-section mb-section-title") Our Team
      p(class="w-[90%] max-w-xl mx-auto mb-10 text-sm text-black/50 dark:text-gray-400 leading-relaxed md:w-3/5") Meet the people behind truWeb. We focus on clear processes, fast support, and templates that help you handle payments and claims with confidence.
      div(class="flex flex-nowrap overflow-x-auto gap-4 lg:grid lg:grid-cols-3 lg:overflow-visible pb-2 -mx-4 px-4 sm:-mx-6 sm:px-6 lg:mx-0 lg:px-0 snap-x snap-mandatory items-stretch")
        each member in [{ img: 'https://images.unsplash.com/photo-1633332755192-727a05c4013d?q=80&w=200', alt: 'Sarah Chen', name: 'Sarah Chen', role: 'Head of Claims', bio: 'Leads claims operations and customer support. Former claims manager with over 10 years in insurance.', phone: '+1 (416) 555-0142', email: 'sarah.chen@truweb.example.com' }, { img: 'https://images.unsplash.com/photo-1535713875002-d1d0cf377fde?q=80&w=200', alt: 'James Mitchell', name: 'James Mitchell', role: 'Customer Success Lead', bio: 'Helps teams adopt our templates and workflows. Focused on onboarding and training.', phone: '+1 (416) 555-0143', email: 'james.mitchell@truweb.example.com' }, { img: 'https://images.unsplash.com/photo-1438761681033-6461ffad8d80?q=80&w=200&h=200&auto=format&fit=crop', alt: 'Priya Sharma', name: 'Priya Sharma', role: 'Product & Operations', bio: 'Owns product design and operations. Ensures our templates stay up to date with regulations.', phone: '+1 (416) 555-0144', email: 'priya.sharma@truweb.example.com' }]
          div(class="group shrink-0 min-w-[57.14%] lg:min-w-0 snap-center snap-always lg:snap-align-none flex flex-col items-center text-center p-8 md:p-6 bg-white dark:bg-gray-800 border border-black/10 dark:border-gray-700 rounded-md cursor-pointer transition-colors hover:border-secondary hover:bg-secondary")
            img(class="w-24 h-24 rounded-full object-cover block" src=member.img alt=member.alt width="96" height="96")
            h3(class="text-2xl font-medium text-secondary dark:text-gray-100 mt-2 mb-0 transition-colors group-hover:text-white")= member.name
            p(class="text-xl text-black/50 dark:text-gray-400 m-0 transition-colors group-hover:text-white/85")= member.role
            p(class="text-sm text-black/40 dark:text-gray-400 w-3/4 mt-4 mb-0 leading-snug transition-colors group-hover:text-white/75")= member.bio
            p(class="text-[0.8125rem] text-black/45 dark:text-gray-500 mt-1 mb-0 transition-colors group-hover:text-white/70")= member.phone
            p(class="text-[0.8125rem] text-black/45 dark:text-gray-500 mt-1 mb-0 transition-colors group-hover:text-white/70")= member.email
            .team-card-social(class="flex items-center justify-center gap-4 mt-6")
              a(href="https://www.linkedin.com/" aria-label="LinkedIn" class="text-black/50 dark:text-gray-400 transition-colors hover:text-inherit focus-visible:outline-2 focus-visible:outline-primary focus-visible:outline-offset-2 group-hover:text-white")
                svg(width="16" height="16" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg" aria-hidden="true")
                  path(d="M14.882 0H1.167A1.16 1.16 0 0 0 0 1.161V14.84C0 15.459.519 16 1.167 16H14.83a1.16 1.16 0 0 0 1.166-1.161V1.135C16.048.516 15.53 0 14.882 0M4.744 13.6H2.385V5.987h2.36zM3.552 4.929c-.778 0-1.374-.62-1.374-1.368a1.38 1.38 0 0 1 1.374-1.367 1.38 1.38 0 0 1 1.374 1.367c0 .749-.57 1.368-1.374 1.368M11.33 13.6V9.91c0-.878-.026-2.039-1.245-2.039-1.244 0-1.426.98-1.426 1.961V13.6H6.3V5.987h2.307v1.058h.026c.337-.62 1.09-1.239 2.256-1.239 2.411 0 2.852 1.549 2.852 3.665V13.6z")
              a(href="#" aria-label="Dribbble" class="text-black/50 dark:text-gray-400 transition-colors hover:text-inherit focus-visible:outline-2 focus-visible:outline-primary focus-visible:outline-offset-2 group-hover:text-white")
                svg(width="16" height="16" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg" aria-hidden="true")
                  path(d="M14.095 0H1.905C.855 0 0 .854 0 1.905v12.19C0 15.145.854 16 1.905 16h12.19c1.05 0 1.905-.854 1.905-1.905V1.905C16 .855 15.146 0 14.095 0m-1.521 6.98a2.85 2.85 0 0 1-2.651-1.277v4.395A3.248 3.248 0 1 1 6.674 6.85c.068 0 .134.006.201.01v1.6c-.067-.007-.132-.02-.2-.02a1.658 1.658 0 1 0 0 3.316c.915 0 1.724-.721 1.724-1.637l.016-7.465h1.531a2.85 2.85 0 0 0 2.63 2.547v1.78")
              a(href="#" aria-label="Twitter" class="text-black/50 dark:text-gray-400 transition-colors hover:text-inherit focus-visible:outline-2 focus-visible:outline-primary focus-visible:outline-offset-2 group-hover:text-white")
                svg(width="19" height="16" viewBox="0 0 19 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg" aria-hidden="true")
                  path(d="m16.358 2.613 1.128-1.425c.326-.386.416-.683.445-.832-.89.535-1.722.713-2.256.713h-.208L15.348.95A3.83 3.83 0 0 0 12.795 0c-2.078 0-3.71 1.722-3.71 3.71 0 .12 0 .298.03.417l.088.593-.623-.03C4.78 4.573 1.663 1.307 1.158.743c-.831 1.485-.356 2.91.148 3.8l1.01 1.663-1.603-.89q.044 1.87 1.425 2.938l.801.594-.801.326c.504 1.515 1.632 2.138 2.464 2.375l1.098.297-1.04.713C2.999 13.745.92 13.656 0 13.568c1.87 1.305 4.097 1.602 5.64 1.602 1.158 0 2.02-.118 2.227-.207 8.313-1.96 8.699-9.382 8.699-10.866v-.208l.178-.119c1.01-.95 1.425-1.454 1.662-1.751-.089.03-.208.089-.326.119z")

  //- 5. Testimonials
  - var testimonials = [{ quote: "Super clean and easy to use. truWeb templates saved us hours and kept our claims process consistent.", name: "Richard Nelson", role: "Claims Manager", image: "https://images.unsplash.com/photo-1633332755192-727a05c4013d?q=80&w=200" }, { quote: "The template quality is top-notch. Perfect balance between clarity and compliance. Highly recommend for any insurance team.", name: "Sophia Martinez", role: "Operations Lead", image: "https://images.unsplash.com/photo-1535713875002-d1d0cf377fde?q=80&w=200" }, { quote: "We adopted truWeb across our team. Our workflow is faster and our documents are consistent. Support is responsive.", name: "Ethan Roberts", role: "Compliance Officer", image: "https://images.unsplash.com/photo-1527980965255-d3b416303d12?w=200&auto=format&fit=crop&q=60" }, { quote: "Clean, professional templates that our clients trust. Updates are straightforward and the structure makes training easy.", name: "Isabella Kim", role: "Customer Success", image: "https://images.unsplash.com/photo-1522075469751-3a6694fb2f61?w=200&auto=format&fit=crop&q=60" }, { quote: "We switched to truWeb last year. Fewer errors, less back-and-forth, and our team actually enjoys using the templates.", name: "Liam Johnson", role: "Head of Payments", image: "https://images.unsplash.com/photo-1438761681033-6461ffad8d80?q=80&w=100&h=100&auto=format&fit=crop" }, { quote: "Well-structured and easy to customize. Makes audits and updates simple. Our go-to for claims and payment docs.", name: "Ava Patel", role: "Founder & CEO", image: "https://images.unsplash.com/photo-1494790108377-be9c29b29330?q=80&w=200" }]
  include ../components/testimonials

  //- 6. Clients (marquee)
  section(class="bg-white dark:bg-gray-900 py-14 md:py-16")
    div(class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center")
      h2(class="text-secondary dark:text-gray-100 font-bold text-section mb-section-title") Our Clients
      p(class="w-[90%] max-w-xl mx-auto mb-10 text-sm text-black/50 dark:text-gray-400 leading-relaxed md:w-3/5") Brands and organizations that use truWeb templates to streamline payments and claims.
    div(class="overflow-hidden w-full relative max-w-5xl mx-auto select-none py-4")
      div(class="absolute left-0 top-0 h-full w-20 z-10 pointer-events-none bg-gradient-to-r from-white dark:from-gray-900 to-transparent")
      div(class="flex will-change-transform min-w-[200%] animate-marquee")
        div(class="flex")
          - var clientLogos = ['slack', 'framer', 'netflix', 'google', 'linkedin', 'instagram', 'facebook']
          each name in clientLogos.concat(clientLogos)
            img(class="h-10 w-auto min-w-[80px] object-contain mx-6 flex-shrink-0 dark:brightness-0 dark:invert" src="https://raw.githubusercontent.com/prebuiltui/prebuiltui/main/assets/companyLogo/" + name + ".svg" alt=name.charAt(0).toUpperCase() + name.slice(1) draggable="false")
      div(class="absolute right-0 top-0 h-full w-20 md:w-40 z-10 pointer-events-none bg-gradient-to-l from-white dark:from-gray-900 to-transparent")

  //- 7. FAQs
  - var faqs = [{ question: "What are web tools and why do they matter?", answer: "Web tools help streamline workflows, automate tasks and improve productivity. They enable teams to build, manage and scale digital products faster and more efficiently. Anyone looking to optimize processes and work smarter online." }, { question: "Who can benefit from using web tools?", answer: "Web tools benefit businesses of all sizes, freelancers, developers, designers, marketers and anyone looking to improve their online workflow and productivity." }, { question: "Do web tools require technical knowledge?", answer: "Most modern web tools are designed to be user-friendly and don't require extensive technical knowledge. Many offer intuitive interfaces, tutorials and customer support to help users get started." }, { question: "Can web tools integrate with existing platforms?", answer: "Yes, most web tools offer integrations with popular platforms through APIs, webhooks and native integrations to ensure seamless workflow between different tools." }, { question: "How do I choose the right tool for business?", answer: "Consider your specific needs, budget, scalability requirements, ease of use, integration capabilities and customer support. Start with free trials to test functionality before committing." }]
  include ../components/accordion
  section#faqs(class="bg-page dark:bg-gray-900 flex items-center justify-center py-12 md:py-20 px-4")
    div(class="w-full max-w-3xl")
      div(class="text-center mb-12")
        p(class="text-sm font-medium tracking-wider text-secondary dark:text-gray-300 mb-2") FAQ'S
        h2(class="text-secondary dark:text-gray-100 font-bold text-section") Everything you need to know
      +accordion(faqs, 'faq-container')
