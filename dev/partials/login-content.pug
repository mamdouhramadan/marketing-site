//- Shared login form content. Expects isArabic, homeUrl to be set by the page/layout.
div(class="flex items-center justify-center w-full px-4 min-h-[60vh]")
  form(class="flex w-full flex-col max-w-96" action="#" method="post")
    a.mb-8(href=homeUrl title=isArabic ? 'ترافلا - الرئيسية' : 'Trufla - Home')
      img(class="size-10 w-10 h-10 dark:invert" src="./images/logo-icon.svg" alt="Trufla" width="40" height="40")
    p(class="mt-4 text-base text-gray-500/90 dark:text-gray-400")= isArabic ? 'الرجاء إدخال البريد الإلكتروني وكلمة المرور للدخول.' : 'Please enter email and password to access.'
    div(class="mt-10")
      label(class="font-medium text-gray-800 dark:text-gray-100" for="login-email")= isArabic ? 'البريد الإلكتروني' : 'Email'
      input#login-email(
        type="email"
        name="email"
        required
        placeholder=isArabic ? 'الرجاء إدخال بريدك الإلكتروني' : 'Please enter your email'
        class="mt-2 rounded-md ring ring-gray-200 dark:ring-gray-700 focus:ring-2 focus:ring-primary outline-none px-3 py-3 w-full bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 placeholder:text-gray-400 dark:placeholder:text-gray-500"
      )
    div(class="mt-6")
      label(class="font-medium text-gray-800 dark:text-gray-100" for="login-password")= isArabic ? 'كلمة المرور' : 'Password'
      input#login-password(
        type="password"
        name="password"
        required
        placeholder=isArabic ? 'الرجاء إدخال كلمة المرور' : 'Please enter your password'
        class="mt-2 rounded-md ring ring-gray-200 dark:ring-gray-700 focus:ring-2 focus:ring-primary outline-none px-3 py-3 w-full bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 placeholder:text-gray-400 dark:placeholder:text-gray-500"
      )
    button(
      type="submit"
      class="mt-8 py-3 w-full cursor-pointer rounded-md bg-primary text-white transition hover:bg-secondary"
    )= isArabic ? 'تسجيل الدخول' : 'Login'
    p(class="text-center py-8 text-gray-700 dark:text-gray-300")= isArabic ? 'ليس لديك حساب؟' : 'Don\'t have an account?'
      a(href="#" class="text-primary hover:underline")= isArabic ? ' إنشاء حساب' : ' Sign up'
